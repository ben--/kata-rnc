#include "rnc.h"

# suite add

static void _valid(const char *num) {
    ck_assert(rnc_valid(num));
}

static void _invalid(const char *num) {
    ck_assert(!rnc_valid(num));
}

# test i_is_valid
    _valid("I");

# test lower_i_is_invaild
    _invalid("i");

# test j_is_not_valid
    _invalid("J");

# test prefix_characters_are_invalid
    _invalid("iI");

# test suffix_characters_are_invalid
    _invalid("Ii");

# test ii_is_valid
    _valid("II");

# test iii_is_valid
    _valid("III");

# test iiii_is_not_valid
    _invalid("IIII");

# test iv_is_valid
    _valid("IV");

# test ivi_is_not_valid
    _invalid("IVI");

# test v_is_valid
    _valid("V");

